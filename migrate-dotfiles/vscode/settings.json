{
  "editor.fontSize": 16,
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "vs-nomo-dark",
  "workbench.colorTheme": "Default Dark Modern",
  // VIM SETTINGS
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<C-w>": false,
    "<C-a>": false,
    "<C-v>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-z>": false,
    "<C-d>": false,
    "<C-p>": false
  },
  // GOLANG SETTINGS
  "editor.formatOnSave": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  }
}