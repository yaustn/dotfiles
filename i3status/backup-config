general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        #ee4035 • #f37736 • #fdf498 • #7bc043 • #0392cf
}

order += "cpu_temperature 0"
order += "disk /"
order += "wireless wlp3s0"
order += "tztime local"
order += "battery 1"

cpu_temperature 0 {
        format = "<span background='#4c5f6b'> 🌡️ </span><span background='#2b3d41'> %degrees °C </span>"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

disk "/" {
        format = "<span background='#4c5f6b'> 💾 </span><span background='#2b3d41'> %free Free </span>"
}

wireless wlp3s0 {
        format_up = "<span background='#4c5f6b'> 📡 </span><span background='#2b3d41'> %essid </span>"
        format_down = "<span background='#4c5f6b'> 📡 </span><span background='#2b3d41'> Disconnected </span>"
}

volume master {
        format = "<span background='#d8f5d6'> ♪: </span><span background='#909dc1''> %volume </span>"
        format_muted = "<span background'#d8f5d6'> ♪: </span><span background='#909dc1''> muted (%volume) </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
		format = "<span background='#4c5f6b'> ⏳ </span><span background='#2b3d41'> %time </span>"
		format_time = "%a %-d %b %H:%M"
}

battery 1 {
	    last_full_capacity = true
        format = "<span background='#4c5f6b'> 🔋 </span><span background='#2b3d41'> %status %percentage </span>"
        format_down = "No Battery"
        status_chr = " 🔌 "
        status_bat = ""
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


